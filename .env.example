# Domain Configuration
DOMAIN=example.com
EMAIL=admin@example.com
STRAPI_DIR=/opt/strapi

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=strapi
DB_USER=strapi_db
DB_PASSWORD=your_secure_password_here

# System Users
STRAPI_USER=strapi
STRAPI_GROUP=strapi

# Security Settings
SSH_RATE_LIMIT_ATTEMPTS=3
SSH_RATE_LIMIT_TIME=300
SSH_BAN_TIME=3600

# PostgreSQL Version
PG_VERSION=16

# Node.js Version
NODE_VERSION=20

# Application Port
STRAPI_PORT=1337

# Firewall Allowed Ports
HTTP_PORT=80
HTTPS_PORT=443
SSH_PORT=22

NODE_ENV=development

# Firewall Settings
ENABLE_UFW=true
ENABLE_FAIL2BAN=true
